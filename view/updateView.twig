</pre> #}
{% if message is defined %}
    <br/><div class="text-danger bg-dark">{{message|raw}}</div><br/><br/>
{% endif %}

{% if changer is defined%}

    <form action="?controller=team&action=updateValid" class="row g-3 needs-validation" novalidate method="post"  enctype="multipart/form-data">
        <input type="hidden" value="{{changer.id}}" name="id">
        <input type="hidden" value="1" name="update">
            <div class="mb-3">
                <label  class="form-label">Nom de l'entreneur</label>
                <input type="text" class="form-control" name="nomEntreneur" id="exampleFormControlInput1" placeholder="" value="{{changer.nomEntreneur|upper|e}}" >
            </div>
            <div class="mb-3">
                <label  class="form-label">Prenom de l'entreneur</label>
                <input type="text" class="form-control" name="prenomEntreneur" id="exampleFormControlInput1" placeholder="" value="{{changer.prenomEntreneur|convert_encoding('UTF-8', 'ISO-8859-1')|e}}" >
            </div>

            <div class="mb-3">
                <label  class="form-label">logo</label>

                <input type="hidden" value="{{changer.logo|e}}" name="curLogo">

                <img src="{{changer.logo|e}}" width="80" height="70" alt="France" data-src="{{changer.logo|e}}"><br/>
                <input type="file"  placeholder="Cliquez pour Modifiez le logo" name="logo" value="{{changer.logo|e}}">
            </div>
            <div class="mb-3">
                <label  class="form-label">Nom de l'Ã©quipe</label>
                <input type="text"  class="form-control" name="nomEquipe" id="exampleFormControlInput1" placeholder="" value="{{changer.nomEquipe|upper|e}}">
            </div>
            <div class="mb-3">
                <label  class="form-label">Initiale</label><br>
                <small>Example: ATL</small>
                <input type="text"  placeholder="" name="initiale" value="">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">informatique</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="25" name="info">{{changer.infoTeam|e}}</textarea>
            </div>
            <div class="mb-3">
                <input type="submit" class="btn btn-success"  placeholder="" name="Modifier" value="Modifier">
            </div>
    </form>
{% endif %}

{% endblock %}

{% extends "homeView.twig" %}

{% block body %}
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Entraineur</th>
        <th scope="col">Logo</th>
        <th scope="col">nom d'equipe </th>
        <th scope="col">information complementaire</th>
      </tr>
    </thead>
      <tbody>
      {% for info in info %}
      <tr>
        <th scope="row">{{info.nomEntreneur|e}}-{{info.prenomEntreneur|e}}</th>
        <td><img src="{{info.logo}}" width="100" height="100" alt="France" data-src="{{info.logo}}"></td>
        <td>{{info.nomEquipe|e}}</td>
        <td>{{info.infoTeam|e}}</td>
      </tr>
      {% endfor %}
      
    </tbody>
  </table>

{% endblock %}
              <label class="form-label" for="form2Example2"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-lock2-fill" viewBox="-0 0 16 16">
                    <path d="M7 6a1 1 0 0 1 2 0v1H7V6z"/>
                    <path d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm-2 6v1.076c.54.166 1 .597 1 1.224v2.4c0 .816-.781 1.3-1.5 1.3h-3c-.719 0-1.5-.484-1.5-1.3V8.3c0-.627.46-1.058 1-1.224V6a2 2 0 1 1 4 0z"/>
                </svg> Password</label>
            </div>

            
              
            <!-- Submit button -->
            <button  type="submit" name="Connect" class="btn btn-primary btn-block mb-4">connect</button>
            
           
          </form>
             <!-- Register buttons -->
              <div class="text-center">
                <p><a class="text-success" href="?controller=utilisateur&action=create">S'inscrire</a></p>
              </div>
        </div>
      </div>
    </div>
  </div>

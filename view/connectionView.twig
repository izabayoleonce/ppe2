            <div class="form-outline mb-4">
              <input type="text" id="formLogin" class="form-control" value="" name="login" placeholder="login" />
              <label class="form-label" for="formLogin"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 17 18">
                    <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                </svg> Login</label>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
